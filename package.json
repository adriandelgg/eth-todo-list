{
	"name": "eth-todo-list",
	"description": "An Ethereum Todo List Dapp!",
	"version": "1.0.0",
	"author": "Adrian Delgado",
	"license": "MIT",
	"bin": "./bin/index.js",
	"main": "./bin/index.js",
	"scripts": {
		"dev": "concurrently \"cd ./hardhat && npx hardhat node\" \"cd ./frontend && yarn dev\"",
		"hardhat": "cd ./hardhat && hh node",
		"frontend": "cd ./frontend && yarn dev",
		"postinstall": "cd ./frontend && yarn install && cd ../hardhat && yarn install"
	},
	"devDependencies": {
		"concurrently": "^6.2.1"
	},
	"keywords": [
		"ethers",
		"ethereum",
		"react",
		"web3",
		"typescript",
		"hardhat"
	]
}
